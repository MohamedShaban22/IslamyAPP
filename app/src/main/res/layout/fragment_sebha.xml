<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/body_seb7a"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.34"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
style="@style/body_sebha"            android:layout_marginTop="80dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head_seb7a"
            />
        <ImageView
            android:id="@+id/head_seb7a"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.2"
            android:adjustViewBounds="true"
            style="@style/head_sebha"
            android:layout_marginStart="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/body_seb7a"
            android:layout_marginTop="14dp"

            />
        <TextView
            android:id="@+id/number_seb7a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/body_seb7a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/count_seb7a"
            android:text="عدد التسبيحات"
          style="@style/sura_text"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/count_seb7a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/number_seb7a"
            app:layout_constraintStart_toStartOf="@id/number_seb7a"
            app:layout_constraintEnd_toEndOf="@id/number_seb7a"
            app:layout_constraintBottom_toTopOf="@id/convert_tv"
            android:text="33"
            android:textStyle="bold"
            style="@style/background_count_tv"
            />
        <TextView
            android:id="@+id/convert_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/count_seb7a"
            app:layout_constraintStart_toStartOf="@id/count_seb7a"
            app:layout_constraintEnd_toEndOf="@id/count_seb7a"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="لا إله إلا الله وحده لا شريك له \n له الملك وله الحمد وهو على كل شيئ قدير"
            android:textSize="22dp"

            style="@style/background_convert_tv"

            />

</androidx.constraintlayout.widget.ConstraintLayout>