<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamyAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/dark_blue</item>
    </style>
    <style name="home_background">
        <item name="android:background">@drawable/bg_darck</item>
    </style>
    <style name="bottom_navigation_style">
        <item name="android:background">@color/dark_blue</item>
        <item name="iconSize">24dp</item>
        <item name="itemBackground">@null</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconSize">38dp</item>
        <item name="itemIconTint">@color/bottom_nav_selectoe_dark</item>
        <item name="itemTextColor">@color/bottom_nav_selectoe_dark</item>

    </style>
    <style name="islamy_tv">
        <item name="android:text">Islamy</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>

    </style>
    <style name="splash_image">
        <item name="android:src">@drawable/splash_dark</item>
    </style>

    <style name="background_recycler_view">
        <item name="android:background">@drawable/sura_details_bg_dark</item>
    </style>
    <style name="sura_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ic_back">
        <item name="android:src">@drawable/ic_back_dark</item>
    </style>
    <style name="view_background">
        <item name="android:background">@color/yellow</item>
    </style>
    <style name="body_sebha">
        <item name="android:src">@drawable/body_sebha_dark</item>
    </style>
    <style name="head_sebha">
        <item name="android:src">@drawable/head_sebha_dark</item>
    </style>
    <style name="background_convert_tv">
        <item name="android:background">@drawable/count_background_shape_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="background_count_tv">
        <item name="android:background">@drawable/sura_details_bg_dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="radio_background">
        <item name="android:src">@drawable/radio_dark_image</item>
    </style>
    <style name="VerseTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
</resources>